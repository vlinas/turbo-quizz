// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model ShopSettings {
  id        Int      @id @default(autoincrement())
  shop      String   @unique
  customCss String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Quiz {
  id             Int           @id @default(autoincrement())
  shop           String
  quiz_id        Int
  title          String
  description    String?
  display_on_pages String[]
  theme_settings Json?
  created_at     DateTime      @default(now())
  updated_at     DateTime      @updatedAt
  deleted_at     DateTime?
  questions      Question[]
  quiz_sessions  QuizSession[]

  @@unique([shop, quiz_id])
  @@index([shop])
}

model Question {
  id            Int      @id @default(autoincrement())
  quiz_id       Int
  shop          String
  question_id   String   @unique @default(uuid())
  question_text String
  metafield_key String?  // e.g., "gender", "skin_type" - used for customer metafields
  order         Int
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  quiz          Quiz     @relation(fields: [shop, quiz_id], references: [shop, quiz_id], onDelete: Cascade)
  answers       Answer[]

  @@index([quiz_id, shop])
}

model Answer {
  id                    Int                      @id @default(autoincrement())
  question_id           String
  answer_id             String                   @unique @default(uuid())
  answer_text           String
  order                 Int
  action_type           String
  action_data           Json
  created_at            DateTime                 @default(now())
  updated_at            DateTime                 @updatedAt
  question              Question                 @relation(fields: [question_id], references: [question_id], onDelete: Cascade)
  answer_selections     AnswerSelection[]
  order_attributions    AnswerOrderAttribution[]

  @@index([question_id])
}

model QuizSession {
  id                   Int                     @id @default(autoincrement())
  session_id           String                  @unique @default(uuid())
  quiz_id              Int
  shop                 String
  started_at           DateTime                @default(now())
  completed_at         DateTime?
  is_completed         Boolean                 @default(false)
  customer_id          String?
  page_url             String?
  user_agent           String?
  quiz                 Quiz                    @relation(fields: [shop, quiz_id], references: [shop, quiz_id], onDelete: Cascade)
  answer_selections    AnswerSelection[]
  order_attributions   QuizOrderAttribution[]

  @@index([quiz_id, shop])
  @@index([shop])
  @@index([started_at])
}

model AnswerSelection {
  id          Int         @id @default(autoincrement())
  session_id  String
  answer_id   String
  question_id String
  quiz_id     Int
  shop        String
  selected_at DateTime    @default(now())
  session     QuizSession @relation(fields: [session_id], references: [session_id], onDelete: Cascade)
  answer      Answer      @relation(fields: [answer_id], references: [answer_id], onDelete: Cascade)

  @@index([session_id])
  @@index([answer_id])
  @@index([quiz_id, shop, selected_at])
  @@index([shop, selected_at])
}

model QuizAnalyticsSummary {
  id          Int      @id @default(autoincrement())
  quiz_id     Int
  shop        String
  date        DateTime @db.Date
  impressions Int      @default(0)
  starts      Int      @default(0)
  completions Int      @default(0)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@unique([quiz_id, shop, date])
  @@index([shop, date])
  @@index([quiz_id, shop, date])
}

model QuizOrderAttribution {
  id               Int         @id @default(autoincrement())
  order_id         String
  order_number     String?
  session_id       String
  quiz_id          Int
  shop             String
  customer_id      String?
  customer_email   String?
  total_price      Decimal     @db.Decimal(10, 2)
  currency         String      @default("USD")
  line_items_count Int         @default(0)
  order_created_at DateTime
  attributed_at    DateTime    @default(now())
  session          QuizSession @relation(fields: [session_id], references: [session_id], onDelete: Cascade)
  answer_attributions AnswerOrderAttribution[]

  @@unique([order_id, shop])
  @@index([session_id])
  @@index([quiz_id, shop])
  @@index([shop, order_created_at])
}

// Answer-level order attribution for detailed revenue analytics
// Enables data warehouse queries like:
// - Revenue per answer per day
// - Answer conversion rates over time
// - A/B testing of answer performance
model AnswerOrderAttribution {
  id                    Int                  @id @default(autoincrement())
  order_attribution_id  Int
  answer_id             String
  question_id           String
  quiz_id               Int
  shop                  String
  // Denormalized for efficient querying without joins
  answer_text           String               // Snapshot of answer text at time of selection
  question_text         String               // Snapshot of question text
  order_id              String               // Denormalized from parent
  order_total           Decimal              @db.Decimal(10, 2) // Denormalized from parent
  currency              String               @default("USD")
  order_date            DateTime             @db.Date // Date for daily aggregations
  selected_at           DateTime             // When the answer was selected
  attributed_at         DateTime             @default(now())
  order_attribution     QuizOrderAttribution @relation(fields: [order_attribution_id], references: [id], onDelete: Cascade)
  answer                Answer               @relation(fields: [answer_id], references: [answer_id], onDelete: Cascade)

  // Indexes optimized for data warehouse queries
  @@unique([order_attribution_id, answer_id]) // Prevent duplicate answer attributions per order
  @@index([answer_id, order_date])            // Revenue per answer per day
  @@index([question_id, order_date])          // Revenue per question per day
  @@index([quiz_id, shop, order_date])        // Revenue per quiz per day
  @@index([shop, order_date])                 // Shop-level daily revenue
  @@index([answer_id, shop])                  // Answer performance by shop
}
